{
    "extends": ["@commitlint/config-angular"],
    "rules": {
        "type-enum": [
            2,
            "always",
            [
                "build",
                "ci",
                "chore",
                "docs",
                "feat",
                "fix",
                "perf",
                "refactor",
                "revert",
                "style",
                "test",
                "types",
                "wip"
            ]
        ],
        "scope-case": [0],
        "subject-case": [0]
    }
}
